{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "removeComments": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES2017",
        "sourceMap": false,
        "allowJs": false,
        // "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "baseUrl": "./",
        "resolveJsonModule": true,
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/"
    ]
}